upstream openfireadmin{
    server 10.224.2.100:9090;
}
upstream openfireapps{
    server 10.224.2.100:7070;
}
upstream wordpress{
    ip_hash;
    server 10.224.3.100:443;
    server 10.224.3.101:443;
}
upstream openfireappsssl{
    server 10.224.2.100:7443;
}
server {
    listen 80;
    server_name 224wordpress.duckdns.org;
    return 301 https://\$host\$request_uri;  # Redirect HTTP to HTTPS
}
server {
    listen 443 ssl default_server;
    server_name 224wordpress.duckdns.org;
    ssl_certificate     /etc/letsencrypt/live/224wordpress.duckdns.org/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/224wordpress.duckdns.org/privkey.pem;
  location / {
        proxy_set_header        Host $host:$server_port;
        proxy_set_header        X-Real-IP $remote_addr;
        proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header        X-Forwarded-Proto $scheme;
        proxy_pass https://wordpress/;
    }
}
server {
    listen 80;
    server_name 224openfire.duckdns.org;
    return 301 https://\$host\$request_uri;  # Redirect HTTP to HTTPS
}
server {
    listen 443 ssl;
    server_name 224openfire.duckdns.org;
    ssl_certificate     /etc/letsencrypt/live/224openfire.duckdns.org/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/224openfire.duckdns.org/privkey.pem;
  location /chat {
        proxy_pass http://openfireapps/xmppweb;
    }
  location / {
    return 301 https://224openfire.duckdns.org/chat;
  }
}
server {
    listen 80;
    server_name admin.224openfire.duckdns.org;
    return 301 https://\$host\$request_uri;
}
server {
    listen 443 ssl;
    server_name admin.224openfire.duckdns.org;
    ssl_certificate     /etc/letsencrypt/live/224openfire.duckdns.org-0001/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/224openfire.duckdns.org-0001/privkey.pem;
    location / {
        proxy_pass http://openfireadmin/;
    }
}

server {
        listen 7443 ssl;
        server_name 224openfire.duckdns.org;
        ssl_certificate     /etc/letsencrypt/live/224openfire.duckdns.org/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/224openfire.duckdns.org/privkey.pem;
    location /ws/ {
        proxy_pass https://openfireappsssl/ws;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    }
    location /httpfileupload {
        proxy_pass https://openfireappsssl/httpfileupload;
        }
}
server {
                listen 443 ssl;
                server_name llamadas.224openfire.duckdns.org;
                access_log /var/log/nginx/access_conferencing.log;
                proxy_set_header Host $host;
                proxy_set_header X-Real-IP $remote_addr;
                proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
                proxy_ssl_verify off;
                ssl_certificate     /etc/letsencrypt/live/224openfire.duckdns.org-0001/fullchain.pem;
                ssl_certificate_key /etc/letsencrypt/live/224openfire.duckdns.org-0001/privkey.pem;
                location /colibri-ws/ {
                        proxy_http_version 1.1;
                        proxy_set_header Upgrade $http_upgrade;
                        proxy_set_header Connection "Upgrade";
                        proxy_pass https://openfireappsssl/colibri-ws/;
                }
                location /ws/ {
                        proxy_http_version 1.1;
                        proxy_set_header Upgrade $http_upgrade;
                        proxy_set_header Connection "Upgrade";
                        proxy_pass http://openfireappsssl/ws/;
                }
                location /http-bind/ {
                        proxy_pass https://openfireappsssl/http-bind/;
        }
                location / {
                        proxy_pass https://openfireappsssl/ofmeet/;
        }
}







